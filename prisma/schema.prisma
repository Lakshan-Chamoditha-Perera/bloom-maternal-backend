datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  MOTHER
  CLINIC_USER
}

/**
 * Auth entity (covers mothers & clinic staff)
 * A Mother is a specialized profile for a User.
 */
model User {
  id         String    @id @default(uuid())
  email      String    @unique @db.VarChar(255)
  password   String    @db.VarChar(255)
  role       Role      @default(MOTHER)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  firstName  String?   @db.VarChar(100)
  lastName   String?   @db.VarChar(100)

  // 1–1 with Mother
  motherProfile Mother?

  @@index([email, role])
}

/**
 * Mother profile (1–1 with User)
 */
model Mother {
  id              String           @id @default(uuid())
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  dob             DateTime         @db.Date
  nicNumber       String           @unique @db.VarChar(20)
  phone           String?          @db.VarChar(20)
  address         String?          @db.Text
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // 1:M medical records
  medicalRecords  MedicalRecord[]

  @@index([userId])
}

/**
 * Medical data recorded for a specific Mother (M:1)
 */
model MedicalRecord {
  id              String     @id @default(uuid())
  bloodPressure   Float?    
  weight          Float?
  sugarLevel      Float?
  gestationalAge  Int?
  notes           String?    @db.Text
  recordedAt      DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  // FK to Mother
  motherId        String
  mother          Mother     @relation(fields: [motherId], references: [id], onDelete: Cascade)

  @@index([motherId])
  @@index([recordedAt])
}
